@model List<PersonaViewModel>

@{
    ViewData["Title"] = "Lista Persone";
}

<h1 class="text-center mt-4">Lista Persone</h1>

<div class="container mt-4">
    @foreach (var persona in Model)
    {
        <div class="row justify-content-center mb-3">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center">@persona.nome @persona.cognome</h2>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@persona.id">Dettaglio</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
